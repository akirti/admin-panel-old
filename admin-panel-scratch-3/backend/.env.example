# MongoDB Configuration
MONGODB_URL=mongodb://admin:admin123@localhost:27017/admin_panel?authSource=admin
DATABASE_NAME=admin_panel

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SMTP Email Configuration
# Port 587 = STARTTLS (recommended for Gmail)
# Port 465 = SSL
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=admin@example.com
EMAIL_FROM_NAME=Admin Panel

# Google Cloud Storage Configuration (Optional)
# IMPORTANT: Paste the service account JSON as a SINGLE LINE with no line breaks
# Example: GCS_CREDENTIALS_JSON={"type":"service_account","project_id":"my-project",...}
# You can use: cat your-service-account.json | jq -c . 
# to convert your JSON file to a single line
GCS_CREDENTIALS_JSON={}
GCS_BUCKET_NAME=admin-panel-bucket

# Application Settings
APP_NAME=Admin Panel API
DEBUG=True
