<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="AM-TargetUnavailableResponse">
    <DisplayName>Target Unavailable Response</DisplayName>
    <Properties/>
    <Set>
        <Headers>
            <Header name="Content-Type">application/json</Header>
            <Header name="Retry-After">30</Header>
        </Headers>
        <Payload contentType="application/json">
{
    "error": "Service Unavailable",
    "message": "The backend service is temporarily unavailable. Please try again later.",
    "code": "SERVICE_UNAVAILABLE",
    "status": 503,
    "timestamp": "{system.timestamp}",
    "requestId": "{messageid}",
    "retryAfter": 30
}
        </Payload>
        <StatusCode>503</StatusCode>
        <ReasonPhrase>Service Unavailable</ReasonPhrase>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="response"/>
</AssignMessage>
