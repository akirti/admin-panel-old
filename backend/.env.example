# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_SCHEME=mongodb
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password
MONGODB_DATABASE=easylife_auth

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32

# SMTP Email Configuration (Optional)
# Port 587 = STARTTLS (recommended for Gmail)
# Port 465 = SSL
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# File Storage Configuration
# FILE_STORAGE_TYPE: "gcs" or "local" (default: "local")
# When set to "gcs", uses GCS_CREDENTIALS_JSON and GCS_BUCKET_NAME
# Falls back to local storage automatically if GCS initialization fails
FILE_STORAGE_TYPE=local
LOCAL_UPLOAD_PATH=/tmp/easylife_uploads

# Google Cloud Storage Configuration (Required if FILE_STORAGE_TYPE=gcs)
# IMPORTANT: Paste the service account JSON as a SINGLE LINE with no line breaks
# Example: GCS_CREDENTIALS_JSON={"type":"service_account","project_id":"my-project",...}
# You can use: cat your-service-account.json | jq -c .
# to convert your JSON file to a single line
GCS_CREDENTIALS_JSON={}
GCS_BUCKET_NAME=your-bucket-name

# Jira Integration Configuration (Optional)
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=SCEN
JIRA_ISSUE_TYPE=Task

# CORS Configuration (Optional)
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Environment
ENV=development
